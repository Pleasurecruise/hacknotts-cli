{
  "name": "hacknotts-cli",
  "version": "1.0.0",
  "description": "AI usage project for HackNotts 2025",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --cache",
    "format": "biome format --write && biome lint --write",
    "format:check": "biome format && biome lint",
    "test": "vitest run"
  },
  "keywords": [
    "toolkit",
    "utilities"
  ],
  "author": "pleasure1234",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pleasurecruise/my-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/Pleasurecruise/my-toolkit/issues"
  },
  "homepage": "https://github.com/Pleasurecruise/my-toolkit#readme",
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@cherrystudio/ai-core": "workspace:^1.0.0-alpha.18",
    "@eslint-react/eslint-plugin": "^1.36.1",
    "@eslint/js": "^9.22.0",
    "eslint": "^9.22.0",
    "eslint-plugin-import-zod": "^1.2.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "tsdown": "^0.15.9",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": [
      "biome format --write --no-errors-on-unmatched",
      "eslint --fix"
    ],
    "*.{json,yml,yaml,css,html}": [
      "biome format --write --no-errors-on-unmatched"
    ]
  }
}
